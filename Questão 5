#include <stdio.h>


int mcd(int a, int b) {
    if (b == 0) {
        return a;  // Caso base: se b é 0, o MCD é a
    } else {
        return mcd(b, a % b);  // Chamada recursiva
    }
}

int main() {
    int num1 = 56;  // Primeiro número
    int num2 = 98;  // Segundo número

    int resultado = mcd(num1, num2);

    printf("O MCD de %d e %d é %d.\n", num1, num2, resultado);

    return 0;
}
